{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: BabelSheet Module",
            "type": "debugpy",
            "request": "launch",
            "module": "babelsheet",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG"
            },
            "args": [
                "translate",
                "--target-langs",
                "es,hr,fr,Turkish",
                "-v"
            ]
        },
        {
            "name": "Python: BabelSheet Module (SA2)",
            "type": "debugpy",
            "request": "launch",
            "module": "babelsheet",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "INFO"
            },
            "args": [
                "translate",
                "--target-langs",
                "es,ru,hr,sl,fr,it,de,pt,jp,ko,id,zh"
            ]
        },
        {
            "name": "Python: BabelSheet Module (SA2 - fix spacing)",
            "type": "debugpy",
            "request": "launch",
            "module": "babelsheet",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "INFO"
            },
            "args": [
                "check-spacing",
                "--target-langs",
                "es,ru,hr,sl,fr,it,de,pt,jp,ko,id,zh",
                "--dry-run"
            ]
        },
        {
            "name": "Python: BabelSheet Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "babelsheet/tests/",
                "-v",
                "--no-cov"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG"
            }
        }
    ]
}